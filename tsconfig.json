{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "lib": ["es2021", "dom"],
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "rootDir": "./src",
      "declarationDir": "./dist",
      "paths": {
        "*": ["*", "./src/types/*"]
      }
    },
    "ts-node": {
      // Tell ts-node CLI to install the --loader automatically
      "esm": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "tests", "vite.config.ts"]
  }
  